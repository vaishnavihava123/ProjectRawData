<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorbac"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewA"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/btndesign"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewA"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/admin" />

            <TextView
                android:id="@+id/textViewA"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="Admin Profile"
                android:textStyle="bold"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewB"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@drawable/btndesign"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewB"
                android:layout_width="139dp"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/textViewB"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="Register User"
                android:textStyle="bold"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewC"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/btndesign"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewC"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/atttt" />

            <TextView
                android:id="@+id/textViewC"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="View Attendance"
                android:textStyle="bold"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewD"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:background="@drawable/btndesign"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/imageViewD"
                android:layout_width="139dp"
                android:layout_height="83dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/userdata" />

            <TextView
                android:id="@+id/textViewD"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="98dp"
                android:gravity="center"
                android:text="View Users"
                android:textStyle="bold"/>


        </androidx.cardview.widget.CardView>


